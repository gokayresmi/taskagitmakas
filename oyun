import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

public class Program {
    public static void main(String[] args) {
        JFrame frame = new JFrame("Taş Kağıt Makas");
        frame.setSize(400, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(null);

        JLabel player1Label = new JLabel("Oyuncu 1 Adı:");
        player1Label.setBounds(50, 30, 100, 30);
        frame.add(player1Label);

        JTextField player1Field = new JTextField();
        player1Field.setBounds(150, 30, 150, 30);
        frame.add(player1Field);

        JLabel player2Label = new JLabel("Oyuncu 2 Adı:");
        player2Label.setBounds(50, 70, 100, 30);
        frame.add(player2Label);

        JTextField player2Field = new JTextField();
        player2Field.setBounds(150, 70, 150, 30);
        frame.add(player2Field);

        JButton playButton = new JButton("Çalıştır");
        playButton.setBounds(150, 110, 100, 30);
        frame.add(playButton);

        JLabel resultLabel = new JLabel("Sonuç:");
        resultLabel.setBounds(50, 150, 300, 30);
        frame.add(resultLabel);

        playButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                String player1Name = player1Field.getText();
                String player2Name = player2Field.getText();

                String[] choices = {"taş", "kağıt", "makas"};
                Random random = new Random();
                String player1Choice = choices[random.nextInt(3)];
                String player2Choice = choices[random.nextInt(3)];

                String winner = determineWinner(player1Name, player1Choice, player2Name, player2Choice);
                resultLabel.setText("Sonuç: " + winner);
            }
        });

        frame.setVisible(true);
    }

    public static String determineWinner(String player1Name, String player1Choice, String player2Name, String player2Choice) {
        if (player1Choice.equals(player2Choice)) {
            return "Beraberlik!";
        }

        switch (player1Choice) {
            case "taş":
                return (player2Choice.equals("makas")) ? player1Name + " kazandı!" : player2Name + " kazandı!";
            case "kağıt":
                return (player2Choice.equals("taş")) ? player1Name + " kazandı!" : player2Name + " kazandı!";
            case "makas":
                return (player2Choice.equals("kağıt")) ? player1Name + " kazandı!" : player2Name + " kazandı!";
            default:
                return "Geçersiz seçim!";
        }
    }
}
